<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".CreateParty">

    <EditText
        android:id="@+id/nameOfParty"
        android:layout_width="305dp"
        android:layout_height="49dp"
        android:layout_marginBottom="19dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="Party Name"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/sponsor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="305dp"
        android:layout_height="49dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="24dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:text="                               Start A Party"
        app:layout_constraintBottom_toTopOf="@+id/nameOfParty"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/sponsor"
        android:layout_width="305dp"
        android:layout_height="49dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="140dp"
        android:ems="10"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:hint="Enter name of sponsor"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/addPic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/failed2"
        android:layout_width="325dp"
        android:layout_height="29dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="29dp"
        android:layout_marginLeft="29dp"
        android:layout_marginRight="29dp"
        android:layout_marginStart="29dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CancelMakeParty" />

    <Button
        android:id="@+id/LocationButton"
        android:layout_width="305dp"
        android:layout_height="70dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="80dp"
        android:text="Set Party Location"
        app:layout_constraintBottom_toTopOf="@+id/CancelMakeParty"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sponsor"
        android:background="#99cc00"/>

    <Button
        android:id="@+id/CancelMakeParty"
        android:layout_width="137dp"
        android:layout_height="60dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="29dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="29dp"
        android:text="Home"
        app:layout_constraintBottom_toTopOf="@+id/failed2"
        app:layout_constraintEnd_toStartOf="@+id/makePartyButton"
        app:layout_constraintHorizontal_bias="0.343"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LocationButton"
        app:layout_constraintVertical_bias="1.0"
        android:background="#99cc00"/>

    <Button
        android:id="@+id/makePartyButton"
        android:layout_width="137dp"
        android:layout_height="60dp"
        android:layout_marginBottom="30dp"
        android:background="#99cc00"
        android:text="Create Party"
        app:layout_constraintBottom_toTopOf="@+id/failed2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.842"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LocationButton"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/addPic"
        android:layout_width="305dp"
        android:layout_height="70dp"
        android:text="Add a Picture"
        app:layout_constraintBottom_toTopOf="@+id/LocationButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sponsor"
        android:background="#99cc00"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="400dp"
        android:layout_height="90dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:color/transparent" />
</android.support.constraint.ConstraintLayout>