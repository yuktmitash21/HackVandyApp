<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".realTimeFaceDetection">
    
    <Button
        android:id="@+id/detection_button"
        android:text="Count People"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.wonderkiln.camerakit.CameraView
        android:layout_above="@id/detection_button"
        android:id="@+id/camera_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></com.wonderkiln.camerakit.CameraView>


    <com.example.yuktmitash.whatsthemove.GraphicOverlay
        android:id="@+id/helper_detect"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/detection_button"
        android:layout_marginBottom="97dp" />

</RelativeLayout>