<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CheckCop">

    <CheckBox
        android:id="@+id/yes"
        android:layout_width="142dp"
        android:layout_height="70dp"
        android:layout_marginBottom="113dp"
        android:layout_marginLeft="56dp"
        android:layout_marginStart="56dp"
        android:text="Yes"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/no"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CopStatement"
        />

    <CheckBox
        android:id="@+id/no"
        android:layout_width="142dp"
        android:layout_height="70dp"
        android:layout_marginBottom="113dp"
        android:layout_marginEnd="56dp"
        android:layout_marginRight="56dp"
        android:text="No"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/yes"
        app:layout_constraintTop_toBottomOf="@+id/CopStatement"
    />

    <TextView
        android:id="@+id/CopStatement"
        android:layout_width="338dp"
        android:layout_height="60dp"
        android:layout_marginTop="199dp"
        app:layout_constraintBottom_toTopOf="@+id/yes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>